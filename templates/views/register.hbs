<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VAISHNAVI BALAJI COMPUTERS</title>
    <link rel="icon" href="/images/smallbanner.jpg">
    <link rel="stylesheet" href="css/register.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    <div class="container">
        <h1>Sign Up Form</h1>
        <form id="signup-form" action="/register" method="post">
            <input type="text" name="username" placeholder="Username" required>
            <input placeholder="Email" id="email" name="email" type="email" required>
            <input placeholder="Phone Number" id="phone" name="phone" type="text" required>
            <div class="password-container">
                <input placeholder="Password" id="password" name="password" type="password" required>
                <i class="toggle-password fas fa-eye-slash" title="Show/Hide Password"></i>
            </div>
            <div class="password-container">
                <input placeholder="Confirm Password" id="confirmpassword" name="confirmpassword" type="password" required>
                <i class="toggle-cpassword fas fa-eye-slash" title="Show/Hide Password"></i>
            </div>
            
            <input class="sub" type="submit" value="Sign Up">
        </form>
        <div id="alerts"></div>
        <h3>Already have an account? <a href="/login">Login</a></h3>
    </div>

    <script>
        const passwordInput = document.getElementById('password');
        const eyeIcon = document.querySelector('.toggle-password');

        eyeIcon.addEventListener('click', () => {
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.classList.remove('fa-eye-slash');
                eyeIcon.classList.add('fa-eye');
            } else {
                passwordInput.type = 'password';
                eyeIcon.classList.remove('fa-eye');
                eyeIcon.classList.add('fa-eye-slash');
            }
        });

        const cpasswordInput = document.getElementById('confirmpassword');
        const ceyeIcon = document.querySelector('.toggle-cpassword'); // Corrected selector here

        ceyeIcon.addEventListener('click', () => { // Corrected event listener here
            if (cpasswordInput.type === 'password') {
                cpasswordInput.type = 'text';
                ceyeIcon.classList.remove('fa-eye-slash');
                ceyeIcon.classList.add('fa-eye');
            } else {
                cpasswordInput.type = 'password';
                ceyeIcon.classList.remove('fa-eye');
                ceyeIcon.classList.add('fa-eye-slash');
            }
        });
    </script>
</body>
</html>




